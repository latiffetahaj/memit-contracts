{
    "name": "betoxyl-contracts",
    "version": "1.0.0",
    "description": "Betoxyl contracts",
    "license": "MIT",
    "main": "index.js",
    "scripts": {
        "test": "hardhat test ",
        "build": "hardhat compile ",
        "clear": "hardhat clean",
        "test:coverage": "cross-env NODE_OPTIONS=\"--max-old-space-size=2048\" hardhat coverage",
        "test:gas": "cross-env REPORT_GAS=true npm run test",
        "remove:logs": "hardhat remove-logs",
        "export": "hardhat export --export-all exports/deployments.json",
        "goerli:deploy": "hardhat --network  goerli deploy",
        "goerli:deploy-main": "hardhat --network  goerli deploy --tags main",
        "goerli:deploy-post": "hardhat --network  goerli deploy --tags post",
        "goerli:verify": "hardhat --network goerli verifix",
        "sepolia:deploy": "hardhat --network  sepolia deploy",
        "sepolia:verify": "hardhat --network  sepolia verifix",
        "bsc:deploy": "hardhat --network bsc deploy",
        "bsc:verify": "hardhat --network bsc verifix",
        "bsctestnet:deploy": "hardhat --network bsc-testnet deploy",
        "bsctestnet:export": "hardhat --network bsc-testnet export --export exports/bsctestnet.json",
        "bsctestnet:verify": "hardhat --network bsc-testnet etherscan-verify --solc-input",
        "done": "npm run export && node build"
    },
    "devDependencies": {
        "@nomicfoundation/hardhat-toolbox": "^3.0.0",
        "dotenv": "^16.3.1",
        "hardhat": "^2.22.3",
        "hardhat-abi-exporter": "^2.10.1",
        "hardhat-contract-sizer": "^2.10.0",
        "hardhat-deploy": "^0.12.2",
        "hardhat-gas-reporter": "^1.0.9",
        "hardhat-log-remover": "^2.0.2",
        "hardhat-preprocessor": "^0.1.5",
        "hardhat-spdx-license-identifier": "^2.2.0",
        "solhint": "^4.0.0"
    },
    "dependencies": {
        "@openzeppelin/contracts": "^5.0.0",
        "@openzeppelin/contracts-upgradeable": "^5.0.0",
        "@uniswap/v3-core": "github:Uniswap/v3-core#0.8",
        "@uniswap/v3-periphery": "github:Uniswap/v3-periphery#0.8",
        "abdk-libraries-solidity": "^3.2.0",
        "bignumber.js": "^9.1.2",
        "eslint": "^8.54.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-config-standard": "^17.1.0",
        "uniswap-v3-deploy-plugin": "^0.1.0",
        "uuid": "^9.0.1"
    }
}